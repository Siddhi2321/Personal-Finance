<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Credit Form</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f7fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .form-container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.1);
            width: 400px;
        }

        h2 {
            margin-bottom: 20px;
            color: #444;
            text-align: center;
            font-size: 24px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            margin-bottom: 6px;
            font-weight: bold;
            color: #555;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 16px;
        }

        .submit-btn {
            width: 100%;
            padding: 12px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 18px;
            cursor: pointer;
        }

        .submit-btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Add Credit Amount</h2>
        <form id="creditForm">
            <div class="form-group">
                <label for="creditInput">Enter Credit Amount:</label>
                <input type="number" id="creditInput" name="creditInput" required placeholder="Enter amount">
            </div>
            <div class="form-group">
                <button type="submit" class="submit-btn">Add Credit</button>
            </div>
        </form>
    </div>

    <script>
        // Handle form submission
        document.getElementById('creditForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default form submission
            
            // Get the new amount from the input field
            const newAmount = parseFloat(document.getElementById('creditInput').value);
            
            if (!isNaN(newAmount) && newAmount  >0) {
                // Retrieve the existing credit amount from localStorage or set it to 0
                let currentCreditAmount = parseFloat(localStorage.getItem('creditAmount')) || 0;
                
                // Add the new amount to the current credit amount
                currentCreditAmount += newAmount;
                
                // Store the updated credit amount back to localStorage
                localStorage.setItem('creditAmount', currentCreditAmount.toFixed(2));
                
                // Redirect to the dashboard page to show the updated amount
                window.location.href = '/dashboard';  // Adjust the path to your dashboard page
            }
        });
    </script>
</body>
</html>
