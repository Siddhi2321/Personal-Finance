<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Debit Form</title>
    
</head>
<style>
    body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #eef2f7;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
}

.form-container {
    background: white;
    padding: 25px;
    border-radius: 10px;
    box-shadow: 0 0 25px rgba(0, 0, 0, 0.1);
    width: 350px;
}

h2 {
    margin-bottom: 25px;
    color: #333;
    text-align: center;
    font-size: 24px;
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
    color: #444;
}

.form-group select,
.form-group input,
.form-group textarea {
    width: 100%;
    padding: 12px;
    border-radius: 6px;
    border: 1px solid #ccc;
    font-size: 16px;
}

.form-group select {
    background-color: #f9f9f9;
}

.form-group textarea {
    resize: vertical;
}

.submit-btn {
    width: 100%;
    padding: 12px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 18px;
    cursor: pointer;
}

.submit-btn:hover {
    background-color: #0056b3;
}

</style>
<body>
    <div class="form-container">
        <h2>Debit Entry Form</h2>
        <form id="debitForm" action="/submit-debit" method="POST">
            <div class="form-group">
                <label for="category">Select Category</label>
                <select id="category" name="category" required>
                    <option value="expenses">Expenses</option>
                    <option value="emi">EMI</option>
                    <option value="investment">Investment</option>
                    <option value="subscriptions">Subscription</option>
                </select>
            </div>
            <div class="form-group">
                <label for="debitAmount">Debit Amount</label>
                <input type="number" id="debitAmount" name="debitAmount" required placeholder="Enter amount">
            </div>
            <div class="form-group">
                <label for="notes">Note</label>
                <textarea id="notes" name="notes" required placeholder="Enter a note"></textarea>
            </div>
            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" id="date" name="date" >
            </div>
            <div class="form-group">
                <button type="submit" class="submit-btn">Update</button>
            </div>
        </form>
    </div>
</body>
<script>
    document.getElementById("category").addEventListener("change", function() {
        const selectedCategory = this.value;
        if (selectedCategory === "emi") {
            window.location.href = "/emi-form"; // Redirects to EMI form
        } else if (selectedCategory === "investment") {
                window.location.href = "/investment-form"; // Redirect to Investment form
        }
        else if (selectedCategory === "subscriptions") {
                window.location.href = "/subscription-form"; // Redirect to Subscriptions form
        }

    });
</script>
</html>
